<div class="container">
    <div class="row">
        <div class="col 12">
            <h1>Eat a Burger!</h1>
        </div>
    </div>
    <div class="row">
        <form class="col s12">
            <div class="row">
                <div class="input-field col s6">
                    <textarea id="textarea1" class="materialize-textarea"></textarea>
                    <label for="textarea1">Make a Burger, Click Submit!</label>
                </div>
            </div>
            <div class="row">
                <div class="col s6">
                    <button class="btn waves-effect waves-light sbmtbtn" type="submit" name="action" id="submitbtn">Submit
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col l4">
            <div class="row">
                <div class="col s12 m10">
                    <h3>Burgers Availible: </h3>
                    {{!-- create cards with handlebars --}}
                    {{#each burgers}}
                    {{#unless devoured}}
                    <div class="card">
                        <div class="card-content">
                            <span class="card-title">{{burger_name}}</span>

                            <a class="waves-effect waves-light btn eatbtn" data-id="{{id}}" data-newburger="{{devoured}}">
                                EAT!!!</a>
                        </div>
                    </div>
                    {{/unless}}
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="col l4">
            <div class="row">
                <div class="col s12 m10">
                    <h3>Burgers Eaten: </h3>
                    {{!-- create cards with handlebars --}}
                    {{#each burgers}}
                    {{#if devoured}}
                    <div class="card">
                        <div class="card-content">
                            <span class="card-title">{{burger_name}}</span>

                            <a class="waves-effect waves-light btn center reorderbtn" data-id="{{id}}" data-newburger="{{devoured}}">
                                REORDER!!!</a>
                        </div>
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>