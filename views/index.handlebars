<div class="container">
    <div class="row">
        <div class="col 12">
            <h1>Eat a Burger!</h1>
        </div>
    </div>
    <div class="row">
        <form class="col s12">
            <div class="row">
                <div class="input-field col s6">
                    <textarea id="textarea1" class="materialize-textarea"></textarea>
                    <label for="textarea1">Make a Burger, Click Submit!</label>
                </div>
            </div>
            <div class="row">
                <div class="col s6">
                    <button class="btn waves-effect waves-light sbmtbtn" type="submit" name="action">Submit
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col l4">
            <h3>Burgers Availible: </h3>
            <div class="row">
                <div class="col s10 m6">
                    {{!-- create cards with handlebars --}}
                    {{#each bugers}}
                        {{#unless devoured}}
                            {{> burgers/burger-block}}
                        {{/unless}}
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="col l3">
            <h3>Burgers Eaten: </h3>
            <div class="row">
                <div class="col s10 m6">
                    {{!-- create cards with handlebars --}}
                    {{#each bugers}}
                        {{#if devoured}}
                            {{> burgers/burger-block-devoured}}
                        {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>